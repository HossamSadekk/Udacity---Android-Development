<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="@dimen/card_elevation"
    app:cardCornerRadius="@dimen/card_corner"
    android:layout_marginStart="22dp"
    app:cardUseCompatPadding="true"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="244dp"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/custom_car"
            android:layout_width="237dp"
            android:layout_height="114dp"
            android:layout_gravity="center"
            android:layout_marginStart="85dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="79dp"
            android:layout_marginBottom="555dp"
            android:fitsSystemWindows="true"
            android:scaleType="centerCrop"
            android:src="@drawable/gt" />

        <TextView
            android:id="@+id/custom_car_model_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="-22dp"
            android:layout_marginTop="-540dp"
            android:text="TextView"
            android:textColor="@color/custom_car_text_color"
            android:textSize="@dimen/txt_size"

            />


        <TextView
            android:id="@+id/custom_car_color_txt"
            android:layout_width="80dp"
            android:layout_height="75dp"
            android:layout_gravity="center"
            android:layout_marginStart="-25dp"
            android:layout_marginTop="18dp"
            android:text="TextView"
            android:textColor="@color/custom_car_text_color"
            android:textSize="@dimen/txt_size" />

        <TextView
            android:id="@+id/custom_car_dpl_txt"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginStart="-10dp"
            android:layout_marginTop="-50dp"
            android:layout_marginBottom="22dp"
            android:text="TextView"
            android:textColor="@color/custom_car_text_color"
            android:textSize="@dimen/txt_size"

            tools:ignore="MissingConstraints" />
    </LinearLayout>


</androidx.cardview.widget.CardView>